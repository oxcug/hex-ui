
module CGtk [system] {

 header "header.h"

 //brew gtk default location:
  header "/usr/local/opt/gtk+3/include/gtk-3.0/gtk/gtk.h"
  // check on your system with "brew --prefix gtk+3" command

  link "gtk-3"
  link "gdk-3"
  link "pangocairo-1.0"
  link "pango-1.0"
  link "atk-1.0"
  link "cairo-gobject"
  link "cairo"
  link "gdk_pixbuf-2.0"
  link "gio-2.0"
  link "gobject-2.0"
  link "glib-2.0"

  export *
  }
